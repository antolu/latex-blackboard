	\setlength{\SizeOfCirc}{\maxof{\widthof{#1}}{\heightof{#1}}}%
	\tikz [x=1.0ex,y=1.0ex,line width=.15ex, draw=black, baseline=-\the\dimexpr\fontdimen22\textfont2\relax]%
